          /* margin: 0 20px; */
          margin-right: 30px;
          margin-left: 5px;
          /* border-bottom: 1px solid #e9e9e9; */
          color: black;
          border: 1px solid #e9e9e9;
          margin-top: 5px;
          background-color: #ccc;
          border-top-right-radius: 10px;
          border-bottom-left-radius: 10px;
          border-bottom-right-radius: 10px;
        }
        #message{
          padding: 10px 20px;
          box-sizing: border-box;
          background: #eee;
          border: 0;
          display: block;
          width: 100%;
          background: #fff;
          border-bottom: 1px solid #eee;
          font-family: Nunito;
          font-size: 16px;
        }
        button{
          background: #575ed8;
          color: #fff;
          font-size: 18px;
          border: 0;
          padding: 12px 0;
          width: 100%;
          border-radius: 0 0 2px 2px;
